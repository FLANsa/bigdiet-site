{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/big dait/**",
      "*.md",
      "render.yaml",
      "package.json",
      "package-lock.json"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/",
        "destination": "/login.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      },
      {
        "source": "/customers",
        "destination": "/customers.html"
      },
      {
        "source": "/subscriptions",
        "destination": "/subscriptions.html"
      },
      {
        "source": "/daily-registration",
        "destination": "/daily-registration.html"
      },
      {
        "source": "/packages",
        "destination": "/packages.html"
      },
      {
        "source": "/pricing",
        "destination": "/pricing.html"
      },
      {
        "source": "/customer-portal",
        "destination": "/customer-portal.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      }
    ]
  }
}

