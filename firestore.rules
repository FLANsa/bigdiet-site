rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Customers collection - phone as document ID
    match /customers/{phone} {
      // Allow read access to customer portal (anyone can read if they know the phone)
      allow read: if true;
      
      // Only authenticated admin can write
      allow write: if request.auth != null;
    }
    
    // Packages collection
    match /packages/{packageId} {
      // Anyone can read packages (for customer portal)
      allow read: if true;
      
      // Only authenticated admin can write
      allow write: if request.auth != null;
    }
    
    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Anyone can read subscriptions (for customer portal)
      allow read: if true;
      
      // Only authenticated admin can write
      allow write: if request.auth != null;
    }
    
    // Daily registrations collection
    match /dailyRegistrations/{registrationId} {
      // Anyone can read registrations (for customer portal)
      allow read: if true;
      
      // Only authenticated admin can write
      allow write: if request.auth != null;
    }
    
    // Activities collection
    match /activities/{activityId} {
      // Anyone can read activities (for customer portal)
      allow read: if true;
      
      // Only authenticated admin can write
      allow write: if request.auth != null;
    }
    
    // Settings collection
    match /settings/{settingId} {
      // Anyone can read settings
      allow read: if true;
      
      // Only authenticated admin can write
      allow write: if request.auth != null;
    }
  }
}
